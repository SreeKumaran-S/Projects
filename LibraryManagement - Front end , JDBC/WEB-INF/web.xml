<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Library Management System</display-name>
    
    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>filter.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Permission Based Auth Filter -->
    <filter>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <filter-class>filter.PermissionBasedAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <url-pattern>/users/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <url-pattern>/books/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <url-pattern>/authors/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <url-pattern>/allocations/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionBasedAuthFilter</filter-name>
        <url-pattern>/roles/*</url-pattern>
    </filter-mapping>
    
    <!-- Auth Servlet -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>controller.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>
    
    <!-- Book Servlet -->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>controller.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/books/*</url-pattern>
    </servlet-mapping>
    
    <!-- Author Servlet -->
    <servlet>
        <servlet-name>AuthorServlet</servlet-name>
        <servlet-class>controller.AuthorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorServlet</servlet-name>
        <url-pattern>/authors/*</url-pattern>
    </servlet-mapping>
    
    <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    
    <!-- Allocation Servlet -->
    <servlet>
        <servlet-name>AllocationServlet</servlet-name>
        <servlet-class>controller.AllocationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllocationServlet</servlet-name>
        <url-pattern>/allocations/*</url-pattern>
    </servlet-mapping>
    
    <!-- Role Servlet -->
    <servlet>
        <servlet-name>RoleServlet</servlet-name>
        <servlet-class>controller.RoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleServlet</servlet-name>
        <url-pattern>/roles/*</url-pattern>
    </servlet-mapping>
    
    <!-- Error Servlet for handling 404 errors -->
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>controller.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error/*</url-pattern>
    </servlet-mapping>
    
    <!-- Error Pages Configuration -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404</location>
    </error-page>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app> 